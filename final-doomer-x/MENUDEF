AddOptionMenu "OptionsMenu"
{
	SubMenu "$FDX_MODTITLE", "FDX_Options"
}

OptionMenu "FDX_Options"
{
	class FDX_TooltipOptionMenu
	FDX_TooltipGeometry 0.0, 0.0, 0.15, 0.1, 0.1, 0.5

	Title "$FDX_OPTTITLE"

	StaticText ""
	StaticText "$FDX_OPTCAT_GAMEPLAY"

	Option "$FDX_OPTLBL_WASTEPROOFSMALL", "FDX_wasteproof_small", "OnOff"

	StaticText ""
	StaticText "$FDX_OPTCAT_PERF"

	Option "$FDX_OPTLBL_PROJTRAILS", "FDX_projtrails", "OnOff"
}
