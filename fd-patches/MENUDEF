AddOptionMenu "OptionsMenu"
{
	SubMenu "$FDPP_MODTITLE", "FDPP_Options"
}

OptionMenu "FDPP_Options"
{
	class FDPP_TooltipOptionMenu
	FDPP_TooltipGeometry 0.0, 0.0, 0.15, 0.1, 0.1, 0.5

	Title "$FDPP_OPTTITLE"

	StaticText ""
	StaticText "$FDPP_OPTCAT_GAMEPLAY"

	Option "$FDPP_OPTLBL_WASTEPROOFSMALL", "FDPP_wasteproof_small", "OnOff"
	FDPP_Tooltip "$FDPP_OPTTIP_WASTEPROOFSMALL"

	Option "$FDPP_OPTLBL_WASTEPROOFBERSERK", "FDPP_wasteproof_berserk", "OnOff"
	FDPP_Tooltip "$FDPP_OPTTIP_WASTEPROOFBERSERK"

	StaticText ""
	StaticText "$FDPP_OPTCAT_PERF"

	Option "$FDPP_OPTLBL_PROJTRAILS", "FDPP_projtrails", "OnOff"
	FDPP_Tooltip "$FDPP_OPTTIP_PROJTRAILS"
}
